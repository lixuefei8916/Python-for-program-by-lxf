print u"输入a,b,c三个值，输出其最大者；"

a = raw_input("Please input a: ")
b = raw_input("Please input b: ")
c = raw_input("Please input c: ")

if a>b:
	if a>c:
		print a
	else:
		print c
else:
	if b>c:
		print b
	else:
		print c

#=========================================
print u"2.	求 1x2x3x4x5"
p = 1   	#乘数
i = 2 		#被乘数
for i in range(1,6):
	x = p
	p = p*i
	print "%s * %s = %s" %(x,i,p)
	i = i+1
print p


#=========================================
print u"3.	求 1x3x5x7x9x11"
p = 1   	#乘数
i = 3 		#被乘数
while True:
	if i > 11:
		break
	else:
		x = p
		p = p*i
		print "%s * %s = %s" %(x,i,p)
		i = i+2
print p

#=========================================

print u"4.判定 2000 – 2500 年终 的每一年是否为闰年，如1996/2008/2012/2048是闰年"
year = 2000
while True:
	if year > 2501:
		break
	else:
		if (year%4==0 and year%100!=0) or year%400==0 :
			print "This is leap year %s" %year
			year = year+1
		else:
			year = year+1
			

