	fenmu = last_last_fenmu + last_fenmu 

	last_fenzi = fenzi
	fenzi = last_last_fenzi + last_fenzi

	tmp = fenzi / float(fenmu)
	print "%s = %s / %s" %(tmp,fenzi,fenmu)
	sum_a.append(tmp)

	last_last_fenmu = last_fenmu 
	last_last_fenzi = last_fenzi 	
	Time = Time + 1

