print u"2.	求 1x2x3x4x5"
p = 1   	#乘数
i = 2 		#被乘数
for i in range(1,6):
	x = p
	p = p*i
	print "%s * %s = %s" %(x,i,p)
	i = i+1
print p


#=========================================

print u"3.	求 1x3x5x7x9x11"
p = 1   	#乘数
i = 3 		#被乘数
while True:
	if i > 11:
		break
	else:
		x = p
		p = p*i
		print "%s * %s = %s" %(x,i,p)
		i = i+2
print p

