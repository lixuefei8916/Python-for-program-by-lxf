print u"3.	求 1x3x5x7x9x11"
p = 1   	#乘数
i = 3 		#被乘数
while True:
	if i > 11:
		break
	else:
		x = p
		p = p*i
		print "%s * %s = %s" %(x,i,p)
		i = i+2
print p

