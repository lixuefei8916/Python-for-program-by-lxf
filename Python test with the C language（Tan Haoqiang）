42.	求出以图案

n = 5	# 最大6格
i = 1
while i < n:
	j = 1
	while j<n+1-i:   #|5+1-1| |5+1-2| 5+1-3 | 5+1-4 | 5+1-5
		print " ",
		j = j+1

	k = 0
	while k<2*i-1:   #|2*1-1| 2*2-1 | 2*3-1 | 2*4-1
		print "*",
		k = k+1 
	i = i+1
	print "\n"
i = 1
while  i<=n-1:
	j = 1
	while j<i+1:
		print " ",
		j = j+1

	k = 0
	while k<2*(n-i)-1:
		print "*",
		k = k+1

	print "\n"
	i = i+1

