10.	求 1+2+3+…+100
def sum():
	i = 1
	y = 0
	while i < 100:
		tmp = y
		y = y+i
		i = i+1
		print "y(%s) = y(%s) + i(%s)" %(y,tmp,i)
	print '==== i = %s ' %i
sum()
	
